<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="230dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/rv_img"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:src="@drawable/cart_img"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="5dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/grid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expensive Jacket"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="center"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="121dp"
                android:layout_below="@+id/rv_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/rv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rv_add"
                android:layout_alignStart="@+id/rv_add"
                android:layout_marginBottom="15dp"
                android:text="5,193.00$ Men's wear"
                android:textColor="#2c2d3c" />

            <!--<TextView-->
                <!--android:id="@+id/grid_category"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignBaseline="@+id/item_price"-->
                <!--android:layout_alignBottom="@+id/item_price"-->
                <!--android:layout_marginStart="8dp"-->
                <!--android:layout_toEndOf="@+id/item_price"-->
                <!--android:text="Men's wear"-->
                <!--android:textColor="#2c2d3c" />-->

            <Button
                android:id="@+id/rv_add"
                android:layout_width="127dp"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimary"
                android:text="Add to cart"
                android:textColor="#ffffff"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="180dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>