<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:padding="8dp"
                android:src="@drawable/cart_img"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expensive Jacket"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="134dp"
                android:layout_alignTop="@+id/item_more_info"
                android:layout_toEndOf="@+id/item_img"
                android:layout_marginStart="21dp" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,319.00$"
                android:textColor="#2c2d3c"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="134dp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/item_title"
                android:layout_marginStart="7dp" />

            <TextView
                android:id="@+id/item_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Info"
                android:textColor="#2c2d3c"
                android:layout_marginEnd="7dp"
                android:layout_alignBaseline="@+id/item_price"
                android:layout_alignBottom="@+id/item_price"
                android:layout_alignEnd="@+id/item_title" />

            <ImageView
                android:id="@+id/item_more_info"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/close" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>