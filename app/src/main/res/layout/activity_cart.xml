<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBKG"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <view
            class="android.support.v4.widget.Space"
            android:id="@+id/view2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:layout_editor_absoluteY="521dp"
            tools:layout_editor_absoluteX="70dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="323dp"
            android:layout_height="57dp"
            android:background="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Shopping Cart"
            android:textColor="#000000"
            android:textSize="24dp"
            tools:layout_editor_absoluteY="13dp"
            tools:layout_editor_absoluteX="85dp" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/left"
            android:layout_marginStart="16dp"
            tools:layout_editor_absoluteY="13dp"
            tools:layout_editor_absoluteX="16dp" />



        <android.support.v7.widget.CardView
            android:id="@+id/button3"
            android:layout_width="304dp"
            android:layout_height="42dp"
            android:background="#ffffff"
            android:elevation="8dp"
            app:cardElevation="4dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="475dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Scan and Go"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="22dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button2"
            android:layout_width="304dp"
            android:layout_height="42dp"
            android:elevation="4dp"
            android:background="#ffffff"
            android:layout_marginStart="4dp"
            android:textAllCaps="false"
            android:visibility="visible"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="426dp">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Quick pay at cashier"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="22dp">

            </TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="304dp"
            android:layout_height="148dp"
            android:elevation="4dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="139dp"
            android:id="@+id/cardView4">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$13.00"
                    android:textAlignment="textEnd"
                    android:textColor="#2c2d3c"
                    android:textSize="20dp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="227dp"
                    tools:layout_editor_absoluteY="16dp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1.00"
                    android:textAlignment="textEnd"
                    android:textColor="#2c2d3c"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="238dp"
                    tools:layout_editor_absoluteY="58dp" />

                <TextView
                    android:id="@+id/total_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$14.00"
                    android:textAlignment="textEnd"
                    android:textColor="#2c2d3c"
                    android:textSize="24dp"
                    tools:layout_editor_absoluteX="215dp"
                    tools:layout_editor_absoluteY="104dp" />

                <TextView
                    android:id="@+id/textView1801"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal"
                    android:textColor="#2c2d3c"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="126dp"
                    tools:layout_editor_absoluteY="16dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax"
                    android:textColor="#2c2d3c"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="170dp"
                    tools:layout_editor_absoluteY="58dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Total"
                    android:textColor="#2c2d3c"
                    android:textSize="24dp"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="104dp" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="304dp"
            android:layout_height="124dp"
            android:elevation="2dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView4">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Switch
                    android:id="@+id/switch3"
                    android:layout_width="255dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="43dp"
                    android:text="Save your cart items"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="25dp" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <ListView
            android:id="@+id/cart_items"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:divider="@null"
            android:dividerHeight="2dp"
            tools:layout_editor_absoluteY="64dp"
            tools:layout_editor_absoluteX="6dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="116dp"
            android:layout_height="42dp"
            android:background="#00B2FF"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="Share App"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="363dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="116dp"
            android:layout_height="42dp"
            android:background="#00B2FF"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="Share App"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="363dp" />



    </android.support.constraint.ConstraintLayout>
</ScrollView>