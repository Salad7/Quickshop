<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="208dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/grid_img"
                android:layout_width="128dp"
                android:layout_height="144dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/cart_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/grid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grid_img"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="Expensive Jacket"
                android:textColor="#000000"
                android:textSize="24dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/grid_add_cart"
                android:layout_alignStart="@+id/grid_add_cart"
                android:text="Men's apparel"
                android:textColor="#2c2d3c"
                android:textSize="22dp"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="69dp" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$77.50"
                android:textColor="#2c2d3c"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="107dp" />

            <!--<TextView-->
            <!--android:id="@+id/grid_category"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBaseline="@+id/item_price"-->
            <!--android:layout_alignBottom="@+id/item_price"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:layout_toEndOf="@+id/item_price"-->
            <!--android:text="Men's wear"-->
            <!--android:textColor="#2c2d3c" />-->

            <Button
                android:id="@+id/grid_add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="16dp"
                android:background="@color/transparent"
                android:text="Add to cart"
                android:textColor="#000000"
                android:textSize="16dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="151dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="SAVE ITEM"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="151dp" />

            <!--<ImageView-->
                <!--android:id="@+id/imageView6"-->
                <!--android:layout_width="28dp"-->
                <!--android:layout_height="24dp"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:src="@drawable/more"-->
                <!--app:layout_constraintRight_toRightOf="parent"-->
                <!--app:layout_constraintTop_toTopOf="parent" />-->

            <android.support.v7.widget.AppCompatRatingBar
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:progressTint="@color/colorPrimary"
                android:rating="3"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="171dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>